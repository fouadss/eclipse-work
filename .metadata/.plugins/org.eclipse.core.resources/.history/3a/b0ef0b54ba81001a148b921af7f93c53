package basic;

import java.util.Scanner;

public class MyScanner {

	static String name;
	static String country;
	static String occupation;
	static int age;
	static double salary;
	
	
	public static void main(String[] args) {
		
		
		Scanner myScan = new Scanner(System.in);

	//System.out.println("what is your name");
	name= myScan.nextLine();
	
	//System.out.println("where are you from");
	country= myScan.nextLine();
	
	//System.out.println("what is your occupation ");
	occupation=myScan.nextLine();
	
	//System.out.println(" how old are you ");
     age=myScan.nextInt();
     
    // System.out.println("what is your salary");
     salary= myScan.nextDouble();
	
	System.out.println("my name is "+name+" i am from "+country+" and i am a "+occupation+" i am "+age+" years old "+" , i get paid "+"$"+salary);
	
	}
	
	
	
	
	
}
